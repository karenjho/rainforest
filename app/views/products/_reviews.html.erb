<p>Reviews for <%= @product.name %></p>

<% @product.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    <% if review.user != nil %>
      <em> by <%= review.user.email %></em>
      Added on: <%= review.created_at %><br>
      <% if current_user == review.user %>
        <%= link_to "Edit this review", edit_product_review_path(review.product_id, review.id) %>
      <% else %>
        <%= link_to "Log in", login_path %> to edit this review
      <% end %>
    <% end %>
  </p>
<% end %>
