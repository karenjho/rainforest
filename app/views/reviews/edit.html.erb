<% if current_user %>
  <h4>Edit review for <%= @product.name %></h4>

  <%= form_for([@product, @review]) do |f| %>

    <%= render "products/errors" %>

    <div class="field">
      <%= f.label :comment %><br>
      <%= f.text_area :comment %>
    </div>

    <div class="actions">
      <%= f.submit "Edit review" %>
    </div>
  <% end %>

<% else %>
  <p>Please <%= link_to "log in", login_path %> to edit this review.</p>
<% end %>
